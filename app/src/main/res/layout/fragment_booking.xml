<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".fragment.BookingFragment">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="397dp" android:layout_marginLeft="15dp" android:layout_marginRight="15dp"
            android:layout_marginTop="10dp">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/small_card_background" android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingEnd="15dp" android:paddingTop="20dp" android:paddingBottom="15dp"
                android:paddingStart="15dp" android:layout_alignParentTop="true"
                android:layout_alignEnd="@+id/search_button" android:id="@+id/linearLayout">

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center">
                <ImageView
                        android:layout_width="21dp"
                        android:layout_height="25dp" app:srcCompat="@drawable/icone_hotel"
                        android:id="@+id/imageView2" android:layout_marginRight="10dp"/>
                <TextView
                        android:text="Reserver une chambre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView3"/>
            </LinearLayout>


            <TextView
                    android:text="Liste des pavillons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textViewpav"
                    android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
                    android:textSize="16sp" android:layout_marginTop="15dp"
                    android:layout_weight="1"/>
            <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:background="@drawable/spinner_background" android:layout_marginEnd="10dp"
                    android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
                    android:layout_marginStart="10dp" android:layout_marginTop="10dp"/>

            <TextView
                    android:text="Liste des Ã©tages"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textViewEtage"
                    android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
                    android:textSize="16sp" android:layout_marginTop="15dp"
                    android:layout_weight="1"/>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:gravity="center"
                    android:layout_gravity="center_horizontal" android:foregroundGravity="center_horizontal"
                    android:layout_marginTop="5dp">

            </LinearLayout>
            <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:background="@drawable/spinner_background" android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp" android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp" android:layout_marginTop="10dp"/>

            <TextView
                    android:text="Liste des chambres"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textViewRoom"
                    android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
                    android:textSize="16sp" android:layout_marginTop="15dp"
                    android:layout_weight="1"/>
            <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:background="@drawable/spinner_background" android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp" android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp" android:layout_marginTop="10dp"/>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginEnd="10dp"
                    android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
                    android:layout_marginStart="10dp" android:layout_marginTop="15dp">
                <TextView
                        android:text="Position"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textViewRoom"
                />
                <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:layout_below="@+id/linearLayout"
                        android:layout_alignStart="@+id/search_button"
                        android:id="@+id/radioGroup" android:layout_weight="1"
                        android:orientation="horizontal" android:layout_marginTop="10dp">
                    <RadioButton
                            android:text="Gauche"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/radioButton2"
                            android:layout_weight="1" android:layout_marginRight="10dp"
                            android:layout_marginEnd="10dp"/>
                    <RadioButton
                            android:text="Droite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/radioButton"
                            android:layout_weight="1" android:layout_marginStart="10dp"
                            android:layout_marginLeft="10dp"/>
                </RadioGroup>
            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>
    <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:paddingEnd="15dp" android:paddingStart="15dp"
            android:paddingTop="10dp">
        <Button
                android:text="Rechercher"
                android:layout_width="match_parent"
                android:layout_height="41dp" android:id="@+id/search_button"
                android:background="@drawable/accent_text_field" android:textColor="#fff"
                android:layout_alignParentBottom="true"
                android:gravity="center" android:hapticFeedbackEnabled="true"
                android:layout_centerInParent="false" android:drawableTint="#fff"
                android:paddingLeft="100dp"
                android:paddingRight="100dp" android:drawableRight="@drawable/ic_arrow_forward_black_24dp"
                android:layout_weight="1" android:layout_marginBottom="70dp"
                android:layout_marginLeft="2dp" android:layout_marginRight="2dp"/>
    </RadioGroup>
</LinearLayout>