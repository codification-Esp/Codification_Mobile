<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginEnd="15dp" android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp" android:layout_marginStart="15dp" android:layout_marginTop="10dp"
            android:background="@drawable/small_card_background" android:paddingEnd="15dp"
            android:paddingLeft="15dp" android:paddingRight="15dp" android:paddingStart="15dp"
            android:paddingTop="20dp" android:paddingBottom="15dp">

        <TextView
                android:text="Mon Compte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textViewpav"
                android:layout_marginLeft="10dp"
                android:textSize="18sp" android:layout_marginTop="15dp"
                android:layout_weight="1"/>

        <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:inputType="textPersonName"
                android:text="Aby"
                android:ems="10"
                android:id="@+id/editText7" android:background="@drawable/gray_text_field" android:paddingLeft="10dp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:inputType="textPersonName"
                android:text="Ngom"
                android:ems="10"
                android:id="@+id/editText6" android:background="@drawable/gray_text_field" android:paddingLeft="10dp"
                android:layout_marginTop="10dp"/>

        <TextView
                android:text="Identifiant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_marginBottom="10dp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:inputType="textPersonName"
                android:text="admin123"
                android:ems="10"
                android:id="@+id/editText4" android:background="@drawable/gray_text_field" android:paddingLeft="10dp"/>
        <Button
                android:text="Changer le mot de passe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/button"
                android:background="@drawable/accent_text_field" android:layout_marginTop="10dp"
                android:textColor="#fff"/>
        <Button
                android:text="Moyens de paiement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:background="@drawable/gray_text_field"
                android:layout_marginTop="10dp"/>
    </LinearLayout>
</LinearLayout>