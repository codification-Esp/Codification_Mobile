<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/top_background"
        android:orientation="vertical"
        android:fitsSystemWindows="true"
        tools:context="com.tukki.tukki.activity.BookingActivity">

    <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="0dp"
            app:elevation="0dp"
            android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:elevation="0dp"
                android:theme="@style/AppTheme.PopupOverlay"
                android:background="@drawable/background_toolbar_translucent"
                app:popupTheme="@style/AppTheme.PopupOverlay">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/booking_activity_title"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorAccent"
                    android:textSize="22sp"
                    android:id="@+id/toolbar_title"/>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:background="@drawable/small_card_background"
            android:layout_marginLeft="15dp" android:layout_marginEnd="15dp" android:layout_marginRight="15dp"
            android:layout_marginStart="15dp" android:padding="15dp">
        <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="none"
                android:ems="10"
                android:id="@+id/editText2" android:background="@drawable/gray_text_field" android:paddingLeft="10dp"
                android:layout_marginBottom="10dp"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:gravity="center_vertical"
                android:layout_marginBottom="10dp">
            <TextView
                    android:text="Départ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView11"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:inputType="none"
                    android:ems="10"
                    android:id="@+id/editText3" android:background="@drawable/gray_text_field"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="5dp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:gravity="center_vertical"
                android:layout_marginBottom="10dp">
            <TextView
                    android:text="Arrivée"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView110"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:inputType="none"
                    android:ems="10"
                    android:id="@+id/editText30" android:background="@drawable/gray_text_field"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="5dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
